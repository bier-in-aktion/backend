{
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [ "node_modules/@types" ],
        "types": ["node"],
        "rootDir": "./",
        "skipLibCheck": true
    },
    "lib": [
        "es2015"
    ],
    "include": ["./**/*"]
}
